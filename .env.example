# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# x402 Configuration
X402_API_KEY=your_x402_api_key_here
X402_MERCHANT_ID=your_merchant_id_here
ORAXEL_MODE=demo

# Facilitator Configuration (for x402 protocol compliance)
# Leave empty in demo mode to use simulated verification
FACILITATOR_URL=
FACILITATOR_API_KEY=
FACILITATOR_NAME=x402 Facilitator

# Database Configuration (Optional - uses in-memory if not set)
DATABASE_URL=postgresql://user:password@localhost:5432/oraxel

# Redis Configuration (Optional - queue and cache disabled if not set)
REDIS_URL=redis://localhost:6379

# Authentication Configuration
API_KEYS=your-api-key-1,your-api-key-2
JWT_SECRET=your-jwt-secret-key-here
REQUIRE_AUTH=false

# Oracle Configuration
# In demo mode, oracle queries are simulated
# In live mode, real oracle providers will be used
